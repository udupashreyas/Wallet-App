<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.udupa.wallet" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SpendMoney"
            android:label="@string/title_activity_spend_money"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.udupa.wallet.MainActivity" />
        </activity>
        <activity
            android:name=".AddMoney"
            android:label="@string/title_activity_add_money"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.udupa.wallet.MainActivity" />
        </activity>
        <activity
            android:name=".Expense"
            android:label="@string/title_activity_expense"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.udupa.wallet.MainActivity" />
        </activity>
        <activity
            android:name=".OweMoney"
            android:label="@string/title_activity_owe_money"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.udupa.wallet.MainActivity" />
        </activity>
    </application>

</manifest>
